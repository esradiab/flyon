 itemBuilder: (BuildContext context, int index) {
              if (provider.data == null) {
                return Container(color: Colors.white,
                    child: Text("Loading.."));
              } else {
                String? fromtable = provider.data!.flightsdata[index].departure_iata;
                String? totable = provider.data!.flightsdata[index].arrival_iata;
                if (fromtable!.toUpperCase() == from.toUpperCase() &&
                    totable!.toUpperCase() == to.toUpperCase()) {
                  flag = true;
                  return Padding(
                    padding:  EdgeInsets.only(top : 10.0),
                    child: InkWell(
                      onTap: () {
                        Navigator.push(
                            context,
                            MaterialPageRoute(
                                builder: (context) =>
                                    PassengerInformation( from , to ,adult , child_ , infant , flightType ,
                                       provider.data!.flightsdata[index].airline_iata ,
                                        provider.data!.flightsdata[index].flight_iata ,
                                        provider.data!.flightsdata[index].flight_date ,
                                        provider.data!.flightsdata[index].departure_time,
                                        provider.data!.flightsdata[index].arrival_time
                                    )));
                      },
                      child: Column(
                          crossAxisAlignment: CrossAxisAlignment.center,
                          mainAxisAlignment: MainAxisAlignment.start,
                          children: [
                            Container(
                              height: 170,
                              width: 300,
                              padding:  EdgeInsets.all(10),
                              decoration: BoxDecoration(
                                borderRadius:
                                    BorderRadius.all(Radius.circular(10)),
                                color: Color(0x2796c1b3),
                              ),
                              child: Row(
                                mainAxisAlignment: MainAxisAlignment.start,
                                crossAxisAlignment: CrossAxisAlignment.center,
                                children: [
                                  SizedBox(
                                    width: 10,
                                  ),
                                  Column(
                                    mainAxisAlignment: MainAxisAlignment.center,
                                    crossAxisAlignment: CrossAxisAlignment.start,
                                    children: [
                                      Text("from: " + fromtable),
                                      Text("to: " + totable),
                                      Text(
                                        "date: " +
                                            provider
                                                .data!.flightsdata[index].flight_date
                                                .toString(),
                                      ),
                                      Text("departureTime: " +
                                          provider.data!.flightsdata[index]
                                              .departure_time!),
                                      Text(
                                        "arrivalTime: " +
                                            provider.data!.flightsdata[index]
                                                .arrival_time!,
                                      ),
                                      Text("FlightId: " +
                                          provider
                                              .data!.flightsdata[index].flight_iata!),
                                      /*GetAirwayPrice(
                                          from,
                                          to,
                                          flightClass,
                                          adult,
                                          child_,
                                          infant,
                                          flightType,
                                          provider.data!.flightsdata[index].airline_iata)*/
                                    ],
                                  ),
                                ],
                              ),
                            ),
                            Divider(),
                          ]),
                    ),
                  );
                }
                else if (flag = false)
                  return Center(
                      child: Text("No Results found !",
                          style: TextStyle(
                              fontWeight: FontWeight.w600,
                              fontSize: 20,
                              color: Colors.grey)));
                else {
                  return Container();
                }
              }
            },
            itemCount: provider.data!.flightsdata.length,
          ),
        );
      }),
    );
  }
}